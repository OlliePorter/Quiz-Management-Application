<h3 class='text-left'>Editing our Answer</h3>
<div class='row'>
  <div class='col-md-10'>
    <%= form_for [ @quiz, @question, @question_answer ], :html => {class: "form-horizontal", role: "form"} do |f| %>
      <% if @question.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@question_answer.errors.count, "error") %>
              prohibited this question answer from being saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @question_answer.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class='form-group'>
        <div class='control-label col-md-2'>
          <%= f.label :text, 'Edit Answer' %>
        </div>
        <div class='col-md-10'>
          <%= f.text_field :text, rows: 10, class: 'form-control', placeholder: 'Enter an answer option' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-2'>
          <%= f.label :correct, 'Tick if correct answer' %>
        </div>
        <div class='col-md-10'>
          <%= f.check_box :correct %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-md-offset-2 col-md-10'>
          <%= f.submit "Update Answer", class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
