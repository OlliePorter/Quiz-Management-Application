<h1>Here are the available quizzes</h1>
<%= link_to "New Quiz", new_quiz_path, class: "btn btn-default btn-lg", id: "new-article-btn" %>

<% @quizzes.each do |quiz| %>
  <div class="well well-lg">
    <div class="quiz-name">
      <%= link_to quiz.name, quiz_path(quiz) %>
    </div>
    <div class="quiz-description">
      <%= quiz.description %>
    </div>
  </div>
<% end %>
