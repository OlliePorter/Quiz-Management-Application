<h3 class='text-left'> Adding New Quiz</h3>
<div class='row'>
  <div class='col-md-10'>
    <%= form_for(@quiz, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-md-1'>
          <%= f.label :name %>
        </div>
        <div class='col-md-10'>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name of Quiz', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-md-1'>
          <%= f.label :description %>
        </div>
        <div class='col-md-10'>
          <%= f.text_field :description, class: 'form-control', placeholder: 'Description of Quiz' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-md-7'>
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
