<h3 class='text-left'>Editing our Question</h3>
<div class='row'>
  <div class='col-md-10'>
    <%= form_for([@quiz, @question], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @question.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@quiz.errors.count, "error") %>
              prohibited this quiz from being saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @question.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class='form-group'>
        <div class='control-label col-md-1'>
          <%= f.label :text %>
        </div>
        <div class='col-md-10'>
          <%= f.text_field :text, class: 'form-control', placeholder: 'Name of Quiz', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-md-7'>
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
