<div class="login-form">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign up</h2>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.label :role %><br />
      <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>
  <p class="text-center small"><%= render "devise/shared/links" %></p>
</div>

